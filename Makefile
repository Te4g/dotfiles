dotfiles: ## Setup dotfiles
	./dotfiles.sh

brew: ## Setup brew packages
	./brew.sh

macos: dotfiles brew ## Setup dotfiles and brew packages

.DEFAULT_GOAL := help
help:
	@grep -E '(^[a-zA-Z_-]+:.*?##.*$$)|(^##)' $(MAKEFILE_LIST) | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[32m%-30s\033[0m %s\n", $$1, $$2}' | sed -e 's/\[32m##/[33m/'
